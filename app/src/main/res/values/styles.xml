<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NightAppTheme.popMenuStyle" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@color/baseBackgroundColor</item>
    </style>

    <style name="MusicPlayer" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">@color/baseTextColor</item>
        <item name="popupMenuStyle">@style/NightAppTheme.popMenuStyle</item>
    </style>




</resources>
