<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <ImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/imageview_notification_image"
        android:scaleType="fitXY"
        android:padding="5dp"
        android:layout_alignParentLeft="true"
        />



    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="10dp"
        android:layout_weight="5">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:id="@+id/imageview_notification_fav"
            android:scaleType="fitXY"
            android:layout_margin="5dp"
            android:layout_centerVertical="true"
            />

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:id="@+id/imageview_notification_next"
            android:layout_toLeftOf="@+id/imageview_notification_fav"
            android:background="@drawable/ic_play_next"
            android:scaleType="fitXY"
            android:layout_margin="5dp"
            android:layout_centerVertical="true"
            />


        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:id="@+id/imageview_notification_play"
            android:layout_toLeftOf="@+id/imageview_notification_next"
            android:scaleType="fitXY"
            android:layout_margin="5dp"
            android:layout_centerVertical="true"
            />

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:id="@+id/imageview_notification_last"
            android:layout_toLeftOf="@+id/imageview_notification_play"
            android:background="@drawable/ic_play_last"
            android:scaleType="fitXY"
            android:layout_margin="5dp"
            android:layout_centerVertical="true"
            />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/imageview_notification_last"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="start|center_vertical"
                android:id="@+id/textview_notification_name"
                android:textSize="16sp"
                android:singleLine="true"
                android:paddingTop="5dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="start|center_vertical"
                android:id="@+id/textview_notification_info"
                android:textSize="14sp"
                android:singleLine="true"
                />

        </LinearLayout>

    </RelativeLayout>



</LinearLayout>