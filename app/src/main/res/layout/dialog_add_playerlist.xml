<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/baseDialogBackgroundColor"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dialog.driver"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textCursorDrawable="@null"
        android:hint="播放列表名称"
        android:textColorHint="@color/dialog.edittexthin"
        android:textColor="@color/baseTextColor"
        android:id="@+id/edittext_playerlist"
        />




</LinearLayout>